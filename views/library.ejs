<%- include("./partials/header") %>

    <div class="container alert alert-dark mt-5">
        <h1 class="text-center p-5">Book Store Library</h1>
    </div>
    <div class="d-flex flex-wrap container bg-light p-5">
        <% books.forEach(function(book, index){ %>
            <div class="card me-3 mb-3" style="width: 18rem">
                <div class="card-body">
                    <h5 class="card-title">
                        <b>Book Name</b> : <%= book.name%>
                    </h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">
                        <b>Author</b> : <%= book.author%>
                    </h6>
                    <h6 class="card-subtitle mb-2 text-body-secondary">
                        <b>Price</b> : <%= book.price%>
                    </h6>
                    <h6 class="card-subtitle mb-2 text-body-secondary">
                        <b>Quantity</b> : <%= book.quantity%>
                    </h6>
                    <h6 class="card-subtitle mb-2 text-body-secondary">
                        <b>Category</b> : <%= book.category%>
                    </h6>
                    <p class="card-text">
                        <b>Description</b> : <%= book.description%>
                    </p>
                    <a href="/delete/<%= index%>" class="card-link text-danger">Delete Book</a>
                    <a href="/update/<%= index%>" class="card-link">Update Book</a>
                </div>
            </div>
            <% }) %>
    </div>
    <%- include('partials/footer') %>